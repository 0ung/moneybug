<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bonboard">


	<!-- 살까말까 게시물 작성 -->
	<insert id="insert" parameterType="bonboardDTO" useGeneratedKeys="true" keyProperty="SEQ">
		INSERT INTO bon_board VALUES (#{writerId}, #{title}, #{content}, #{views}, #{itemLink}, #{voteCount}, now(), #{voteEndAt})
	</insert>

	<!-- 게시물 상세보기 -->
	<select id="one" resultType="bonboardDTO">
		SELECT * FROM bon_board
		WHERE SEQ = #{seq}
	</select>

	<!-- 게시물 리스트 가져오기 -->
	<select id="list" resultType="bonboardDTO">
		SELECT * FROM bon_board
	</select>

	<!-- 게시물 업데이트 -->
	<update id="update" parameterType="bonboardDTO">
		UPDATE bon_board SET TITLE = #{title}, CONTENT = #{content},
		ITEM_LINK=#{itemLink} where SEQ = #{seq}

	</update>

	<!-- 게시물 삭제 -->
	<delete id="delete">
		DELETE FROM bon_board WHERE SEQ = #{seq}
	</delete>

	

</mapper>
